<form class="text-center border border-light p-5">
  <p class="h4 mb-4">Login</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, class: "form-control mb-4", placeholder: "EMAIL" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control mb-4", placeholder: "PASSWORD" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "LOGIN", class: "btn btn-info my-4 btn-block" %>
      </div>
      <em class="devise-links">Don't have an account?<%= render "devise/shared/links" %></em>

    <% end %>
</form>
