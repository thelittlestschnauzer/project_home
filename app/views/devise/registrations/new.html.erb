<div class="text-center border border-light p-5" data-no-turbolink>
  <p class="h4 mb-4">Sign up</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.text_field :name, class: "form-control mb-4", placeholder: "NAME" %>
      </div>
      <div class="field">
        <%= f.email_field :email, class: "form-control mb-4", placeholder: "E-MAIL" %>
      </div>
      <div class="field">
        <% if @minimum_password_length %>
        <em class="password-field">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: "form-control mb-4", placeholder: "PASSWORD" %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, class: "form-control mb-4", placeholder: "PASSWORD-CONFIRMATION" %>
      </div>
      <div class="actions">
        <%= f.submit "SIGN UP", class: "btn btn-info my-4 btn-block" %>
      </div>

    <hr>
    <em class="devise-links">Already have an account? <%= render "devise/shared/links" %></em>
    <% end %>


</div>
