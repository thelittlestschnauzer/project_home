<main class="container home">
  <div class="row home-header">
    <div class="col-md-1 mr-auto">
      <button id="new-room-button" class="btn btn-primary mr-auto">New</button>
      <div id="new-room-popover" class="room-popover is-hidden">
        <%= form_with(model: @room) do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control", id: "room-title-input", placeholder:"Name Your Room", autoFocus: true %>
        </div>
          <%= f.submit "Save", class: "btn btn-success" %>
        <button id="cancel-room-popover" class="btn btn-secondary">Cancel</button>
        <% end %>
      </div>
    </div>
      <div class="col-md-4">
        <h3 class="text-center">Rooms</h3>
      </div>
      <div class="col-md-1 ml-auto">
        <button class="btn ml-auto">...</button>
      </div>
    </div>
    <div id="room-list" class="row home-rooms">
      <% @rooms.each do |room| %>
        <%= render "room_card", room: room %>
      <% end %>
  </div>
</main>
